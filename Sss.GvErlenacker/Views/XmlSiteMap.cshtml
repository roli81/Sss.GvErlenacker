
@model IEnumerable<Sss.GvErlenacker.Models.PageModels.BasePage>

@{Layout = null; Response.ContentType = "text/xml"; }
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemalocation="http://www.google.com/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd" xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
    @foreach (var page in Model)
    {

        if (!page.HideFromXmlSitemap)
        {
            <url>
                <loc>@page.Content.Url(mode: UrlMode.Absolute)</loc>
                <lastmod>@($"{page.Content.UpdateDate:s}+00:00")</lastmod>
                <changefreq>@page.SearchEngineChangeFrequency</changefreq>
                <priority>@page.SearchEngineRelativePriority</priority>
            </url>
        }
    }

    </urlset>
