@model Sss.GvErlenacker.Models.Poco.MemberFormModel

@using ClientDependency.Core.Mvc

@{
    Html.RequiresJs("~/Scripts/gvea-form.js");

}






@using (Html.BeginUmbracoForm("Submit", "MemberForm"))
{
    <div class="form-group">
        @Html.Label("Bitte wählen  Sie die Art ihrer Gönnerschaft:", new { @class = "label label-primary" })
        @Html.DropDownListFor(m => m.SponsorType, Model.SponsorTypes, new { @class = "form-control" })
    </div>

    <div id="business-panel">
        <div class="form-group">
            @Html.Label(Model.LabelCompany + " * ", new {@class = "label label-primary"})
            @Html.TextBoxFor(m => m.Company, new {@class = "form-control mandatory"})
            <p class="error-msg"></p>
        </div>
        <div id="webSite" class="form-group">
            @Html.Label(Model.LabelWebsite + "*", new {@class = "label label-primary"})
            @Html.TextBoxFor(m => m.Website, new {@class = "form-control"})
            <p class="error-msg"></p>
        </div>
        <div id="logoUpload" class="form-group">
            @Html.Label(Model.LabelLogo, new {@class = "label label-primary"})
            @Html.TextBoxFor(m => m.Logo, new {  type= "file"}) 
        </div>
    </div>

    <div class="form-group">
        @Html.Label(Model.LabelSalutation, new { @class = "label label-primary" })
        @Html.DropDownListFor(m => m.Salutation, Model.Salutations, new { @class = "form-control mandatory" })
    </div>


    <div class="form-group">
        @Html.Label(Model.LabelName + " * ", new { @class = "label label-primary" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control mandatory" })
        <p class="error-msg"></p>
    </div>
    <div class="form-group">
        @Html.Label(Model.LabelFirstName + " * ", new { @class = "label label-primary" })
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control mandatory" })
        <p class="error-msg"></p>
    </div>
    <div class="form-group">
        @Html.Label(Model.LabelStreet + " * ", new { @class = "label label-primary" })
        <div class="row dbl-inpt-container">
            <div class="col-8 col-sm-10">
                @Html.TextBoxFor(m => m.Street, new { @class = "form-control mandatory" })
                <p class="error-msg"></p>
            </div>
            <div class="col-4 col-sm-2">
                @Html.TextBoxFor(m => m.Number, new { @class = "form-control mandatory" })
                <p class="error-msg"></p>
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.Label(Model.LabelZipCity + " * ", new { @class = "label label-primary" })
        <div class="row dbl-inpt-container">
            <div class="col-4 col-sm-2">
                @Html.TextBoxFor(m => m.Zip, new { @class = "form-control mandatory" })
                <p class="error-msg"></p>
            </div>
            <div class="col-8 col-sm-10">
                @Html.TextBoxFor(m => m.City, new { @class = "form-control mandatory" })
                <p class="error-msg"></p>
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.Label(Model.LabelEmail + " * ", new { @class = "label label-primary" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control mandatory email" })
        <p class="error-msg"></p>
    </div>
    <div class="form-group">
        @Html.Label(Model.LabelPhone, new { @class = "label label-primary" })
        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
    </div>
    <div class="form-group fusp">
        @Html.Label("Website", new { @class = "label label-primary" })
        @Html.TextBoxFor(m => m.FuSb, new { @class = "form-control" })

    </div>

    <div class="form-group right">

        <button id="submitButton" type="submit"  style="text-align: right">Senden</button>   


    </div>
}








