@model Sss.Mutobo.Poco.NewsletterUser


@if (Request.QueryString["view"] == "registered")
{
    <p>Der Benutzer mit dieser Email-Adresse wurde bereits registriert.</p>
}
else if (Request.QueryString["view"] == "success")
{
    <p>
        Sie haben sich erfolgreich für den Newletter angemeldet. Es wurde eine EMail mit Bestätigungsaufforderung an Ihre Email-Adresse gesendet. Bitte bestätigen Sie Ihre Anmeldung mit dem Link im Email. 
    </p>
}
else
{
    using(Html.BeginUmbracoForm("Index", "NewsletterForm")) {

        @Html.HiddenFor(m => m.Key)
        <div class="form-group">
            <label class="label label-primary">Name *</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control mandatory" })
            <p class="error-msg"></p>
        </div>
        <div class="form-group">
            <label class="label label-primary">Vorname *</label>
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control mandatory" })
            <p class="error-msg"></p>
        </div>
        <div class="form-group">
            <label class="label label-primary">Email *</label>
            @Html.TextBoxFor(m => m.EMail, new { @class = "form-control mandatory email" })
            <p class="error-msg"></p>
        </div>
        <div class="form-group fusp">
            @Html.Label("Website", new { @class = "label label-primary" })
            @Html.TextBoxFor(m => m.FuSb, new { @class = "form-control" })
        </div>
        <div class="form-group right">
            <button id="submitButton" type="submit" style="text-align: right">Senden</button>
        </div>
    }


}





