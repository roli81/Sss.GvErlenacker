@model IEnumerable<Sss.Mutobo.Poco.Image>


<div id="news-carousel" class="carousel slide news-carousel mx-auto" data-ride="carousel">

    <!-- Indicators -->
    <ul class="carousel-indicators">
        @if (Model.Count() > 1)
        {
            for (var i = 0; i < Model.Count(); i++)
            {
                <li data-target="#news-carousel" data-slide-to="@i" class="@(i < 1 ? "active" : string.Empty)"></li>
            }
        }
    </ul>
    <!-- The slideshow -->
    <div class="carousel-inner">
        @for (var i = 0; i < Model.Count(); i++)
        {
            <div class="carousel-item  @(i < 1 ? "active" : string.Empty)">
                <a class="lightbox" href="@(Model.ToArray()[i].LargeUrl)">
                    <img class="d-block w-100 gallery"  src="@(Model.ToArray()[i].SmallUrl)" alt="@(Model.ToArray()[i].Alt)">
                </a>
            </div>
        }
    </div>
    @if (Model.Count() > 1)
    {        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#news-carousel" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#news-carousel" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    }
</div>
